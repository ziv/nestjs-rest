{
  "name": "nestjs-rest-utilities",
  "description": "Nest.JS rest utilities",
  "author": "Ziv Perry",
  "license": "MIT",
  "workspaces": [
    "packages/nestjs-rest",
    "packages/nestjs-rest-mongodb",
    "packages/std-json-api",
    "packages/demo"
  ],
  "scripts": {
    "build": "npm run build -w packages/std-json-api && npm run build -w packages/nestjs-rest",
    "watch": "npm run build -w packages/std-json-api && npm run build -w packages/nestjs-rest",
    "test": "tsx --test",
    "lint": "deno fmt && deno lint",
    "predocs": "npm run docs --workspaces --if-present"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "tsx": "^4.20.3",
    "typedoc": "^0.28.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
